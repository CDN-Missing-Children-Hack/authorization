<!doctype html>
<html>

<head>
	<title>Profile</title>
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
	<style>
		/* Sticky footer styles
-------------------------------------------------- */

		html {
			position: relative;
			min-height: 100%;
		}

		body {
			/* Margin bottom by footer height */
			margin-bottom: 60px;
		}

		.footer {
			position: absolute;
			bottom: 0;
			width: 100%;
			/* Set the fixed height of the footer here */
			height: 60px;
			background-color: #f5f5f5;
		}
		/* Custom page CSS
-------------------------------------------------- */
		/* Not required for template or sticky footer method. */

		body>.container {
			padding: 60px 15px 0;
		}

		.container .text-muted {
			margin: 20px 0;
		}

		.footer>.container {
			padding-right: 15px;
			padding-left: 15px;
		}

		code {
			font-size: 80%;
		}
	</style>
</head>

<body>
	<div class="container">
		<div class="page-header">
			<h1>My Help Find Me Profile</h1>
		</div>
		<div class="row">
			<!-- TWITTER INFORMATION -->
			<div class="col-md-4">
				<div class="well">
					<h3 class="text-info"><span class="fa fa-twitter"></span> Twitter</h3>

					<% if (user.twitter.token) { %>
						<p>
							<% if (user.twitter.profilepic) { %>
								<img src='<%=user.twitter.profilepic%>' />
								<br>
								<% } %>
									<% if (user.twitter.displayName) { %>
										<strong>Display name</strong>:
										<%= user.twitter.displayName %><br>
											<% } %>
												<% if (user.twitter.username) { %>
													<strong>User Name</strong>:
													<%= user.twitter.username %><br />
														<% } %>
						</p>

						<a href="/unlink/twitter" class="btn btn-info">Remove</a>
						<% } else { %>
							<a href="/connect/twitter" class="btn btn-info">Connect</a>
							<% } %>

				</div>
			</div>

			<!-- INSTAGRAM INFORMATION -->
			<div class="col-md-4">
				<div class="well">
					<h3 class="text-primary"><span class="fa fa-instagram"></span> Instagram</h3>
					<!-- check if the user has this token (is the user authenticated with this social account) -->
					<% if (user.instagram.token) { %>
						<p>
							<% if (user.instagram.profilepic) { %>
								<img src=< % "user.instagram.profilepic"%>/><br>
								<% } %>
									<% if (user.instagram.displayName) { %>
										<strong>Display Name</strong>:
										<%= user.instagram.displayName %><br>
											<% } %>
												<% if (user.instagram.username) { %>
													<strong>Username </strong>:
													<%= user.instagram.username %><br>
														<% } %>
						</p>

						<a href="/unlink/instagram" class="btn btn-primary">Remove</a>
						<% } else { %>
							<a href="/connect/instagram" class="btn btn-primary">Connect</a>
							<% } %>
				</div>
			</div>

			<!-- FACEBOOK INFORMATION -->
			<div class="col-md-4">
				<div class="well">
					<h3 class="text-primary"><span class="fa fa-facebook"></span> Facebook</h3>

					<!-- check if the user has this token (is the user authenticated with this social account) -->
					<% if (user.facebook.token) { %>
						<p>
							<% if (user.facebook.profilepic) { %>
								<img src=< % "user.facebook.profilepic"%>/><br>
								<% } %>
									<% if (user.facebook.email) { %>
										<strong>Email</strong>:
										<%= user.facebook.email %><br>
											<% } %>
												<% if (user.facebook.displayName) { %>
													<strong>Display Name</strong>:
													<%= user.facebook.displayName %><br>
														<% } %>
															<% if (user.facebook.name) { %>
																<strong>Name</strong>:
																<%= user.facebook.name %><br>
																	<% } %>
																		<% if (user.facebook.gender) { %>
																			<strong>Gender</strong>:
																			<%= user.facebook.gender %><br>
																				<% } %>
																					<% if (user.facebook.hometown) { %>
																						<strong>Hometown</strong>:
																						<%= user.facebook.hometown.name %><br>
																							<% } %>
																								<% if (user.facebook.birthday) { %>
																									<strong>Birthdate</strong>:
																									<%= user.facebook.birthday %><br>
																										<% } %>
						</p>

						<a href="/unlink/facebook" class="btn btn-primary">Remove</a>
						<% } else { %>
							<a href="/connect/facebook" class="btn btn-primary">Connect</a>
							<% } %>

				</div>
			</div>
		</div>


		<footer class="footer">
			<div class="container">
				<p class="text-muted">
					By registering you are opting in for the HELP FIND ME PROGRAM, but this information will only be used if triggered through
					one of your social media accounts by including #HFM in a post. To find out more information about the program please
					see
					<a href="https://mcsc.ca/" target="_blank">Missing Children Society of Canada</a> | &copy; Missing Children Society
					of Canada |
					<a href="https://mcsc.ca/policy" target="_blank">Privacy Policy</a> |
					<span class="fa fa-twitter"></span> <a href="https://twitter.com/MCSCanada" target="_blank">@MCSCanada</a>
				</p>
			</div>
		</footer>

